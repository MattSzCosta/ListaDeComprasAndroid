<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroProdutoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/cadastro_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome"
            android:inputType="text" />

        <EditText
            android:id="@+id/cadastro_marca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Marca"
            android:inputType="text" />

        <EditText
            android:id="@+id/cadastro_quantidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantidade"
            android:inputType="number" />

        <EditText
            android:id="@+id/cadastro_tipoProduto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo do Produto"
            android:inputType="text" />

        <EditText
            android:id="@+id/cadastro_preco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Preco"
            android:inputType="number|numberDecimal" />

        <Button
            android:id="@+id/botao_salvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/botaoSalvar"/>

        <Button
            android:id="@+id/botao_produtosCadastrados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/botaoProdutosCadastrados" />

    </LinearLayout>


</ScrollView>